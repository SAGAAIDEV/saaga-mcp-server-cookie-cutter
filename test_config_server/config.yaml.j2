# Configuration file for Test Config Server
# Generated by cookiecutter template

version: 1

# Server configuration
server:
  name: "Test Config Server"
  description: "MCP server with SAAGA decorators"
  port: 3001
  host: "127.0.0.1"
  transport: "stdio"
  
  # Logging configuration
  log_level: "INFO"
  log_retention_days: 30
  
  # Parallel processing configuration
  parallel:
    max_workers: 4
    timeout_seconds: 300
    enable_multiprocessing: true
  # Logging system configuration
logging:
  level: "INFO"
  retention_days: 30
  format: "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
  database_logging: true
  file_logging: true

# Tool configuration
tools:
  # List of enabled tools (empty means all tools are enabled)
  enabled_tools: []
  
  # Global tool timeout in seconds
  tool_timeout_seconds: 300
  
  # Tool-specific settings
  example_tools:
    - name: "get_time"
      enabled: true
      timeout_seconds: 5
    - name: "calculate_fibonacci"
      enabled: true
      timeout_seconds: 30
    - name: "echo_tool"
      enabled: true
      timeout_seconds: 5
    - name: "random_number"
      enabled: true
      timeout_seconds: 5
    - name: "process_batch_data"
      enabled: true
      timeout_seconds: 60
    - name: "simulate_heavy_computation"
      enabled: true
      timeout_seconds: 300
      parallel_enabled: true
    # Feature flags
features:
  admin_ui: False
  example_tools: True
  parallel_examples: True
  database_logging: true
  file_logging: true
  auto_reload: false

# Security settings
security:
  enable_cors: false
  allowed_origins: []
  api_key_required: false
  rate_limiting:
    enabled: false
    requests_per_minute: 60

# Performance settings
performance:
  cache_enabled: true
  cache_ttl_seconds: 3600
  connection_pool_size: 10
  request_timeout_seconds: 30

# Development settings
development:
  debug_mode: false
  auto_reload: false
  profiling_enabled: false
  mock_external_services: false