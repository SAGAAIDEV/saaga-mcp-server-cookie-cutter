# Example configuration file for Minimal Server
# Copy this file to config.yaml and customize as needed

version: 1

# Server configuration
server:
  name: "Minimal Server"
  description: "MCP server with SAAGA decorators"
  port: 9000
  host: "127.0.0.1"
  transport: "stdio"
  
  # Logging configuration
  log_level: "ERROR"
  log_retention_days: 1
  
  # Logging system configuration
logging:
  level: "ERROR"
  retention_days: 1
  format: "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
  database_logging: true
  file_logging: true

# Tool configuration
tools:
  # List of enabled tools (empty means all tools are enabled)
  enabled_tools: []
  
  # Global tool timeout in seconds
  tool_timeout_seconds: 300

# Feature flags
features:
  admin_ui: False
  example_tools: False
  parallel_examples: False
  database_logging: true
  file_logging: true
  auto_reload: false

# Security settings (customize for production)
security:
  enable_cors: false
  allowed_origins: []
  api_key_required: false
  rate_limiting:
    enabled: false
    requests_per_minute: 60

# Performance settings
performance:
  cache_enabled: true
  cache_ttl_seconds: 3600
  connection_pool_size: 10
  request_timeout_seconds: 30

# Development settings
development:
  debug_mode: false
  auto_reload: false
  profiling_enabled: false
  mock_external_services: false